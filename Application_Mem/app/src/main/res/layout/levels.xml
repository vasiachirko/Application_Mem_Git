<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:src="@drawable/letter1"
                android:id="@+id/lvls_btn1"
                android:layout_width="50pt"
                android:layout_height="50pt"
                />
            <ImageButton
                android:src="@drawable/letter2"
                android:id="@+id/lvls_btn2"
                android:layout_width="50pt"
                android:layout_height="50pt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:src="@drawable/letter3"
                android:id="@+id/lvls_btn3"
                android:layout_width="50pt"
                android:layout_height="50pt"/>
            <ImageButton
                android:src="@drawable/letter4"
                android:id="@+id/lvls_btn4"
                android:layout_width="50pt"
                android:layout_height="50pt"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>